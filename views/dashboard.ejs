<%- include('partials/header') %>

<section> <!--Navbar-->
    <ul class="nav nav-pills nav-fill gap-2 p-1 small bg-dark rounded-5 shadow-sm" id="pillNav2" role="tablist" style="--bs-nav-link-color: var(--bs-white); --bs-nav-pills-link-active-color: var(--bs-primary); --bs-nav-pills-link-active-bg: var(--bs-white);">
        <li class="nav-item" role="presentation">
          <button class="nav-link active rounded-5" id="home-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="true">Appetizers</button>
        </li>
        <form action="/dashboard/maincourse" method="GET">
            <li class="nav-item" role="presentation">
              <button class="nav-link rounded-5" id="profile-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Main Courses</button>
            </li>
        </form>
        <li class="nav-item" role="presentation">
          <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Desserts</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Beverages</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Snacks</button>
        </li>
    </ul>
</section>
<section>
    <% if (recipes && recipes.length > 0) { %>
        <% recipes.forEach(function(recipe) { %>
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="..."> <!-- You can replace "..." with the actual image URL -->
                <div class="card-body">
                    <h5 class="card-title"><%= recipe.title %></h5>
                    <p class="card-text"><%= recipe.r_description %></p>
                    <a href="#" class="btn btn-primary">View</a>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <h2 style="text-align: center;">No recipes found</h2>
    <% } %>
    

</section>

<%- include('partials/footer') %>